{
  "name": "hsr-gacha-tracker",
  "version": "1.0.0",
  "description": "Honkai Star Rail Gacha Tracking Service",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "cd server && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": ["honkai", "star-rail", "gacha", "tracking", "node", "react"],
  "author": "HSR Gacha Tracker",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
